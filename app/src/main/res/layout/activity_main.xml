<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/dark_slate_gray"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:textColor="@color/teal_200"
        android:textSize="30sp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingRight="48dp"
        android:paddingLeft="48dp"
        android:textStyle="bold"
        android:text="BULLS AND COWS"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">



        <Button
            android:id="@+id/newgame"
            android:background="@layout/validate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingRight="48dp"
            android:paddingLeft="48dp"
            android:text="COMPUTER"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:onClick="Gotonewgame"
            android:layout_marginBottom="10dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/connectfriend"
            android:background="@layout/validate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingRight="48dp"
            android:paddingLeft="48dp"
            android:layout_weight="1"
            android:text="ONLINE"
            android:onClick="StartGameOnline"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:textSize="15sp" />


        <Button
            android:id="@+id/about"
            android:background="@layout/validate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingRight="48dp"
            android:paddingLeft="48dp"
            android:text="About"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:onClick="About"
            android:layout_marginBottom="10dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/help"
            android:background="@layout/validate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingRight="48dp"
            android:paddingLeft="48dp"
            android:text="Help"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:onClick="Help"
            android:layout_marginBottom="10dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/exit"
            android:background="@layout/validate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingRight="48dp"
            android:paddingLeft="48dp"
            android:layout_weight="1"
            android:text="EXIT"
            android:onClick="QuitApp"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>